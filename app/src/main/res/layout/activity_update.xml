<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_5sdp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border_backgroung_icon"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_title_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="8"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Name of category"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ct_header"/>

    <EditText
        android:id="@+id/edt_category"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/tv_category"
        app:layout_constraintBottom_toBottomOf="@+id/tv_category"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_category"/>

    <TextView
        android:id="@+id/tv_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Director"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_category"/>

    <EditText
        android:id="@+id/edt_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/tv_director"
        app:layout_constraintBottom_toBottomOf="@+id/tv_director"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_director"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_direction"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_director"/>

    <TextView
        android:id="@+id/tv_description_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Description"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_direction"/>

    <EditText
        android:id="@+id/edt_description_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/tv_description_director"
        app:layout_constraintBottom_toBottomOf="@+id/tv_description_director"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_description_director"/>

    <TextView
        android:id="@+id/tv_mode_of_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Mode of payment"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_description_director"/>

    <EditText
        android:id="@+id/edt_mode_of_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/tv_mode_of_payment"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mode_of_payment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_mode_of_payment"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_mode_of_payment"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_mode_of_payment"/>

    <TextView
        android:id="@+id/fullname_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Fullname"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_mode_of_payment"/>


    <TextView
        android:id="@+id/tv_fullname_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:visibility="gone"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/fullname_feedback"
        app:layout_constraintBottom_toBottomOf="@+id/fullname_feedback"
        app:layout_constraintLeft_toRightOf="@+id/fullname_feedback"/>

    <TextView
        android:id="@+id/email_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Email"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname_feedback"/>


    <TextView
        android:id="@+id/tv_email_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:visibility="gone"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/email_feedback"
        app:layout_constraintBottom_toBottomOf="@+id/email_feedback"
        app:layout_constraintLeft_toRightOf="@+id/email_feedback"/>

    <TextView
        android:id="@+id/subject_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Subject"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_feedback"/>


    <TextView
        android:id="@+id/tv_subject_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:visibility="gone"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/subject_feedback"
        app:layout_constraintBottom_toBottomOf="@+id/subject_feedback"
        app:layout_constraintLeft_toRightOf="@+id/subject_feedback"/>

    <TextView
        android:id="@+id/content_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Content"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_feedback"/>


    <TextView
        android:id="@+id/tv_content_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:visibility="gone"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/content_feedback"
        app:layout_constraintBottom_toBottomOf="@+id/content_feedback"
        app:layout_constraintLeft_toRightOf="@+id/content_feedback"/>

    <TextView
        android:id="@+id/tv_send_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Reply to feedback"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_feedback"/>

    <EditText
        android:id="@+id/edt_send_feedback"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/tv_send_feedback"
        app:layout_constraintBottom_toBottomOf="@+id/tv_send_feedback"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_send_feedback"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:backgroundTint="@color/black"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>