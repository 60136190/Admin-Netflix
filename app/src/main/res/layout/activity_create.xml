<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.CreateActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_5sdp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border_backgroung_icon"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_title_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_name_of_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Name of category"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ct_header"/>

    <EditText
        android:id="@+id/edt_name_of_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_5sdp"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toTopOf="@+id/tv_name_of_category"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_of_category"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_name_of_category"/>


    <TextView
        android:id="@+id/tv_name_of_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Name of Director"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_of_category"/>

    <EditText
        android:id="@+id/edt_nname_of_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_5sdp"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toTopOf="@+id/tv_name_of_director"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_of_director"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_name_of_director"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_direction"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:visibility="gone"
        android:src="@drawable/ic_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nname_of_director"/>

    <TextView
        android:id="@+id/tv_description_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Description"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_direction"/>

    <EditText
        android:id="@+id/edt_description_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/text_color"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/tv_description_director"
        app:layout_constraintBottom_toBottomOf="@+id/tv_description_director"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_description_director"/>

    <TextView
        android:id="@+id/tv_name_of_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:text="Mode of payment"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_description_director"/>

    <EditText
        android:id="@+id/edt_name_of_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/text_color"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/tv_name_of_payment"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_of_payment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_name_of_payment"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_mode_of_payment"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:visibility="gone"
        android:src="@drawable/addimg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_of_payment"/>

    <Button
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:backgroundTint="@color/blue"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>